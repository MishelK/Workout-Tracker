<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:background="@mipmap/ic_return"
        android:layout_marginHorizontal="10sp"
        android:layout_marginVertical="10sp"
        android:id="@+id/btn_return_edit"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_add_new_workout"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginHorizontal="10sp"
            android:layout_marginVertical="10sp"
            android:background="@drawable/addicon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_marginVertical="10sp"
            android:layout_toRightOf="@id/btn_add_new_workout"
            android:gravity="center"
            android:text="@string/btn_txt_add_new_workout"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:id="@+id/tv_add_new_workout"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/btn_add_new_workout">


        </ScrollView>


    </RelativeLayout>


</RelativeLayout>