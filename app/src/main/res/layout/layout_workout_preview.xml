<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="160dp"
    android:orientation="vertical"
    android:id="@+id/rl_workout_preview">

    <TextView
        android:id="@+id/tv_workout_preview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/tv_workout_preview_desc"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@id/tv_workout_preview_name"
        android:layout_marginTop="0dp"
        android:layout_marginStart="15dp" />

    <Button
        android:id="@+id/btn_workout_more"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/tv_workout_preview_desc"
        android:layout_marginStart="15dp"
        android:background="@drawable/solidturqoise"
        android:text=">"
        android:textSize="40sp"/>



</RelativeLayout>