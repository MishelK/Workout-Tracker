<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:background="@mipmap/ic_return"
        android:layout_marginHorizontal="10sp"
        android:layout_marginVertical="10sp"
        android:id="@+id/btn_return_begin"/>

    <TextView
        android:id="@+id/tv_select_workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_txt_select_workout"
        android:layout_below="@id/btn_return_begin"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="#000000"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_select_workout"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll_workout_list">


        </LinearLayout>

    </ScrollView>

</RelativeLayout>